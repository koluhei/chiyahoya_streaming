<h1>コメント欄</h1>
<div class='comment-body'>
  <div class='comment-image'>
    <%= image_tag('sample1.png', size: '50x50') %>
  </div>
  <div class='comment-content'>
    <p class='comment-right'>
      <a class='comment-time'><%= Time.now.hour %>:<%= Time.now.min %>  </a><a class='comment-name'><%= @comment.name %> </a><a class='comment-text'><%= @comment.text %></a>
    </p>
  </div>
</div>